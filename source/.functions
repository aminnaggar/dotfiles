}

# `setUpHooks`
function setUpHooks(){
	local hooksDir=".git/hooks"
	local candidGitSnap="$HOME/sbin/candidGitSnap"
	if [ -d "$hooksDir" ]; then

		if [ ! -f $hooksDir/post-commit ]; then
			echo -e "#!/bin/bash\n" > $hooksDir/post-commit
			chmod 777 $hooksDir/post-commit
		fi

		echo -e "\nsource $candidGitSnap" >> $hooksDir/post-commit

	else
		echo "Could not find .git/hooks"
	fi
}


